@model IEnumerable<NbaApp.Data.Models.PlayersModels.Player>

@{
    Layout = "_Layout";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TemporaryDisplayName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PersonId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TeamId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Jersey)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HeightFeet)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HeightInches)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HeightMeters)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WeightPounds)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WeightKilograms)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateOfBirthUTC)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NbaDebutYear)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.YearsPro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CollegeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastAffiliation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Country)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TemporaryDisplayName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PersonId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TeamId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Jersey)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pos)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HeightFeet)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HeightInches)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HeightMeters)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WeightPounds)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WeightKilograms)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfBirthUTC)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NbaDebutYear)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.YearsPro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CollegeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastAffiliation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country)
            </td>
            <td>
     
                @Html.ActionLink("CareerSummaryDetails", "CareerSummaryDetails", new { id=item.id }) 
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>
